NAME = minishell

CC = cc 

CFLAGS = -Wall -Wextra -Werror 

SRC = *.c

OBJ = $(SRC:.c=.o)

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean :
	rm -f $(OBJ)

fclean :
	rm -f $(NAME)

re : fclean all 

.PHONY: all clean fclean re
